<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MDCSample" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_1</item>
        <item name="colorPrimaryVariant">@color/color_2</item>
        <item name="colorOnPrimary">@color/color_3</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_4</item>
        <item name="colorSecondaryVariant">@color/color_5</item>
        <item name="colorOnSecondary">@color/color_6</item>

        <item name="android:colorBackground">@color/color_7</item>
        <item name="colorSurface">@color/color_8</item>
        <item name="colorError">@color/color_9</item>

        <item name="colorOnBackground">@color/color_10</item>
        <item name="colorOnSurface">@color/color_11</item>
        <item name="colorOnError">@color/color_12</item>
        <!-- Controls Ripple color -->
        <item name="colorControlHighlight">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:actionBarSize">?attr/actionBarSize</item>
        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.MDCSample.Toolbar</item>
    </style>

    <!-- Toolbar Theme -->
    <style name="Widget.MDCSample.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:popupTheme">@style/Widget.MDCSample.Popup</item>
        <item name="popupTheme">@style/Widget.MDCSample.Popup</item>
    </style>

    <style name="ThemeOverlay.MDCSample.Toolbar.Custom" parent="">
        <item name="colorPrimary">?android:colorBackground</item>
    </style>

    <style name="Widget.MDCSample.Popup" parent="ThemeOverlay.MaterialComponents">
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MDCSample.Subtitle1</item>
        <!-- Controls background color of menu item -->
        <!--        <item name="android:backgroundTint">@color/overflow_menu_toolbar</item>-->
    </style>

    <style name="TextAppearance.MDCSample.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
</resources>