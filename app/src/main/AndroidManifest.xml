<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joydeep.mdcsample">

    <application
        android:name=".MDCApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MDCSample">
        <activity android:name=".toolbar.ToolbarWithSearchActivity" />
        <activity android:name=".toolbar.CollapsingToolbarImageActivity" />
        <activity android:name=".toolbar.CollapsingToolbarActivity" />
        <activity android:name=".toolbar.ScrollingToolbarActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".toolbar.BasicToolbarActivity" />
    </application>

</manifest>